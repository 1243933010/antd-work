// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User{
  userId    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  access String
  avatar String?
  password String
  labels UserLabel[]
}

model UserLabel{
  id Int @default(autoincrement()) @id
  name String
  user User @relation(fields: [userId],references: [userId])
  userId Int
}

model Work{
   id Int @default(autoincrement()) @id
   userId Int
   workType Int
   time String?
   mounthTime String?
   tag Json?
}

model WorkTag{
   value Int @default(autoincrement()) @id
   tag String
   color String
}